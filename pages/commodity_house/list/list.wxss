
.house-item {
  display: inline-flex;
  align-items: flex-start;
  width: 100%;
  height: 300rpx;
  margin-bottom: 20rpx;
  border-bottom: 2rpx solid #f2f2f2;
  padding-bottom: 20rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
}
.house-item .house-img {
  display: inline-flex;
  width: 300rpx;
  height: 300rpx;
  background-color: #dfd;
}
.house-item .house-meta {
  display: inline-flex;
  flex-direction: column;
  width: 390rpx;  
  padding-left: 20rpx;
  background-color: #ddf;
}
.house-item .house-meta .house-name {
  padding-bottom: 30rpx;
  font-weight: bold;
}
.house-item .house-meta .house-price {
  align-self: flex-end;
  position: relative;
  top: -30rpx;
  padding-bottom: 20rpx;
}