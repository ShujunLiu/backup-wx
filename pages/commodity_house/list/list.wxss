
.filter {
  display: flex;
  flex-direction: row;
  padding-bottom: 30rpx;
}
.filter .picker {
  display: inline-flex;
  justify-content: center;
  width: 187.5rpx;
}
.filter-expand {
  padding-bottom: 30rpx;
}
.house-item {
  display: inline-flex;
  align-items: flex-start;
  width: 100%;
  height: 280rpx;
  margin-bottom: 20rpx;
  border-bottom: 2rpx solid #f2f2f2;
  padding-bottom: 20rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
}
.house-item .house-img {
  display: inline-flex;
  width: 280rpx;
  height: 280rpx;
}
.house-item .house-meta {
  display: inline-flex;
  flex-direction: column;
  width: 410rpx;  
  padding-left: 20rpx;
}
.house-item .house-meta .house-type-price {
  display: flex;
  flex-direction: row;
}
.house-item .house-meta .house-name {
  display: inline-flex;
  padding-bottom: 30rpx;
  font-weight: bold;
}
.house-item .house-meta .house-price {
  display: inline-flex;
  align-self: flex-end;
  position: relative;
  padding-bottom: 20rpx;
  color: #ea1218;
}
.house-item .house-meta .house-address {
  color: #999;
}