
.filter {
  display: flex;
  flex-direction: row;
  padding-bottom: 50rpx;
  font-size: 14px;
}
.filter .picker {
  display: inline-flex;
  justify-content: center;
  width: 187.5rpx;
}
.filter-expand {
  padding-bottom: 30rpx;
}
.house-item {
  position: relative;
  width: 100%;
  height: 280rpx;
  margin-bottom: 20rpx;
  border-bottom: 2rpx solid #f2f2f2;
  padding-bottom: 20rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
}
.house-item .house-img {
  float: left;
  width: 280rpx;
  height: 280rpx;
}
.house-item .house-meta {
  float: left;
  width: 410rpx;  
  padding-left: 20rpx;
}
.house-item .house-meta .house-name {
  padding-bottom: 30rpx;
  font-weight: bold;
  height: 50rpx;
}
.house-item .house-meta .house-type-price {
  position: relative;
}
.house-item .house-meta .house-type {
  float: left;
  padding-bottom: 20rpx;
}
.house-item .house-meta .house-price {
  float: right;
  padding-bottom: 20rpx;
  color: #ea1218;
}
.house-item .house-meta .house-address {
  position: absolute;
  bottom: 20rpx;
  color: #999;
}